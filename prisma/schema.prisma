generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String? // O '?' torna o campo opcional
  password String
  fatos Fatos[]  // Um usuário pode ter vários posts
}

model Fatos {
  id        Int      @id @default(autoincrement())
  title     String
  tipo      Int      
  value     Int
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}